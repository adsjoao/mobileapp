<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fundo branco com gradiente sutil -->
    <gradient
        android:startColor="@color/white"
        android:endColor="@color/gray_50"
        android:angle="135"
        android:type="linear" />

    <!-- Bordas arredondadas -->
    <corners android:radius="12dp" />

    <!-- Borda sutil -->
    <stroke
        android:width="1dp"
        android:color="@color/gray_200" />

    <!-- Padding interno -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />

</shape>