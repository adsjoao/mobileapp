<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado marcado -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/checkbox_checked_bg" />
            <stroke android:width="2dp" android:color="@color/checkbox_checked_border" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Estado desmarcado -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/checkbox_unchecked_border" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Estado padrÃ£o -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="@color/primary_color" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>